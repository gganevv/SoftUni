@{
    ViewBag.Title = "All Products";
}

<form asp-controller="Product" asp-action="All">
    <p>
        Product: <input type="text" name="keyword" />
        <input type="submit" value="Search" />
    </p>
</form>
<div class="card" style="width: 18rem;">
    <div class="card-header">@ViewBag.Title</div>
    <ul class="list-group list-group-flush">
        @foreach (var product in Model)
        {
            <li class="list-group-item"><a href="/Product/Details/@product.Id">
                N.@product.Id: @product.Name - @product.Price lv.
                </a>
            </li>
        }
    </ul>
</div>